<!DOCTYPE html>
<html>
  <head>
    <title>CinemaScheduler</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <header>
    <nav>
      <% if current_user && current_user.is_admin? %>
        <%= link_to "Admin", admin_user_index_path %> | <%= link_to "Home", root_path %> | <%= link_to "Logout", logout_path, method: :delete %>
      <% elsif current_user %>
        <%= link_to current_user.username, user_path(current_user.id) %> | <%= link_to "Logout", logout_path, method: :delete %> | <%= link_to "Home", root_path %>
      <% else %>
        <%= link_to "Login", login_path %> | <%= link_to "Home", root_path %>
      <% end %>
    </nav>
  </header>
  <body>
    <%= yield %>
  </body>
</html>
